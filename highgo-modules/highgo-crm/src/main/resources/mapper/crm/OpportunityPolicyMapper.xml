<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.highgo.crm.mapper.OpportunityPolicyMapper">
    
    <resultMap type="OpportunityPolicy" id="OpportunityPolicyResult">
        <result property="id"    column="id"    />
        <result property="opportunityCode"    column="opportunity_code"    />
        <result property="policyId"    column="policy_id"    />
        <result property="policyName"    column="policy_name"    />
        <result property="releaseDate"    column="release_date"    />
    </resultMap>

    <sql id="selectOpportunityPolicyVo">
        select id, opportunity_code, policy_id, policy_name, release_date from t_opportunity_policy
    </sql>

    <select id="selectOpportunityPolicyList" parameterType="OpportunityPolicy" resultMap="OpportunityPolicyResult">
        <include refid="selectOpportunityPolicyVo"/>
        <where>  
            <if test="opportunityCode != null  and opportunityCode != ''"> and opportunity_code like concat('%', #{opportunityCode}, '%')</if>
            <if test="policyName != null  and policyName != ''"> and policy_name like concat('%', #{policyName}, '%')</if>
            <if test="releaseDate != null "> and release_date &lt;= #{releaseDate}</if>
        </where>
    </select>
    
    <select id="selectOpportunityPolicyById" parameterType="Long" resultMap="OpportunityPolicyResult">
        <include refid="selectOpportunityPolicyVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertOpportunityPolicy" parameterType="OpportunityPolicy">
        insert into t_opportunity_policy
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="opportunityCode != null">opportunity_code,</if>
            <if test="policyId != null">policy_id,</if>
            <if test="policyName != null">policy_name,</if>
            <if test="releaseDate != null">release_date,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="opportunityCode != null">#{opportunityCode},</if>
            <if test="policyId != null">#{policyId},</if>
            <if test="policyName != null">#{policyName},</if>
            <if test="releaseDate != null">#{releaseDate},</if>
         </trim>
    </insert>

    <update id="updateOpportunityPolicy" parameterType="OpportunityPolicy">
        update t_opportunity_policy
        <trim prefix="SET" suffixOverrides=",">
            <if test="opportunityCode != null">opportunity_code = #{opportunityCode},</if>
            <if test="policyId != null">policy_id = #{policyId},</if>
            <if test="policyName != null">policy_name = #{policyName},</if>
            <if test="releaseDate != null">release_date = #{releaseDate},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOpportunityPolicyById" parameterType="Long">
        delete from t_opportunity_policy where id = #{id}
    </delete>

    <delete id="deleteOpportunityPolicyByIds" parameterType="String">
        delete from t_opportunity_policy where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>