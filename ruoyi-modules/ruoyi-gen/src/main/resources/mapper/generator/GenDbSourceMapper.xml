<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.gen.mapper.GenDbSourceMapper">

    <resultMap type="GenDbSource" id="GenDbSourceResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="dbType" column="db_type"/>
        <result property="oracleConnMode" column="oracle_conn_mode"/>
        <result property="serviceNameOrSid" column="service_name_or_sid"/>
        <result property="host" column="host"/>
        <result property="port" column="port"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="schemaName" column="schema_name"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectGenDbSourceVo">
        select id,
               name,
               db_type,
               oracle_conn_mode,
               service_name_or_sid,
               host,
               port,
               username,
               password,
               schema_name,
               status,
               create_by,
               create_time,
               update_by,
               update_time,
               remark
        from gen_db_source
    </sql>

    <select id="selectGenDbSourceList" parameterType="GenDbSource" resultMap="GenDbSourceResult">
        <include refid="selectGenDbSourceVo"/>
        <where>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="dbType != null  and dbType != ''">and db_type = #{dbType}</if>
            <if test="oracleConnMode != null  and oracleConnMode != ''">and oracle_conn_mode = #{oracleConnMode}</if>
            <if test="serviceNameOrSid != null  and serviceNameOrSid != ''">and service_name_or_sid =
                #{serviceNameOrSid}
            </if>
            <if test="host != null  and host != ''">and host = #{host}</if>
            <if test="port != null ">and port = #{port}</if>
            <if test="username != null  and username != ''">and username like concat('%', #{username}, '%')</if>
            <if test="password != null  and password != ''">and password = #{password}</if>
            <if test="schemaName != null  and schemaName != ''">and schema_name like concat('%', #{schemaName}, '%')
            </if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and create_time between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
    </select>

    <select id="selectGenDbSourceById" parameterType="Long" resultMap="GenDbSourceResult">
        <include refid="selectGenDbSourceVo"/>
        where id = #{id}
    </select>

    <insert id="insertGenDbSource" parameterType="GenDbSource" useGeneratedKeys="true" keyProperty="id">
        insert into gen_db_source
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="dbType != null">db_type,</if>
            <if test="oracleConnMode != null">oracle_conn_mode,</if>
            <if test="serviceNameOrSid != null">service_name_or_sid,</if>
            <if test="host != null">host,</if>
            <if test="port != null">port,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="schemaName != null">schema_name,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="dbType != null">#{dbType},</if>
            <if test="oracleConnMode != null">#{oracleConnMode},</if>
            <if test="serviceNameOrSid != null">#{serviceNameOrSid},</if>
            <if test="host != null">#{host},</if>
            <if test="port != null">#{port},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="schemaName != null">#{schemaName},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateGenDbSource" parameterType="GenDbSource">
        update gen_db_source
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="dbType != null">db_type = #{dbType},</if>
            <if test="oracleConnMode != null">oracle_conn_mode = #{oracleConnMode},</if>
            <if test="serviceNameOrSid != null">service_name_or_sid = #{serviceNameOrSid},</if>
            <if test="host != null">host = #{host},</if>
            <if test="port != null">port = #{port},</if>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="schemaName != null">schema_name = #{schemaName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGenDbSourceById" parameterType="Long">
        delete
        from gen_db_source
        where id = #{id}
    </delete>

    <delete id="deleteGenDbSourceByIds" parameterType="String">
        delete from gen_db_source where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>