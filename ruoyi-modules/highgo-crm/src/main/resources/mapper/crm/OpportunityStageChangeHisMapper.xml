    <sql id="selectOpportunityStageChangeHisVo">
        select id, opportunity_code, source_stage, target_stage, change_time, operator_id, operator_name from t_opportunity_stage_change_his
    </sql>

    <select id="selectOpportunityStageChangeHisList" parameterType="OpportunityStageChangeHis" resultMap="OpportunityStageChangeHisResult">
        <include refid="selectOpportunityStageChangeHisVo"/>
        <where>  
            <if test="opportunityCode != null  and opportunityCode != ''"> and opportunity_code like concat('%', #{opportunityCode}, '%')</if>
            <if test="sourceStage != null  and sourceStage != ''"> and source_stage = #{sourceStage}</if>
            <if test="targetStage != null  and targetStage != ''"> and target_stage = #{targetStage}</if>
            <if test="changeTime != null "> and change_time &lt;= #{changeTime}</if>
            <if test="operatorName != null  and operatorName != ''"> and operator_name like concat('%', #{operatorName}, '%')</if>
        </where>
    </select>
    
    <select id="selectOpportunityStageChangeHisById" parameterType="Long" resultMap="OpportunityStageChangeHisResult">
        <include refid="selectOpportunityStageChangeHisVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertOpportunityStageChangeHis" parameterType="OpportunityStageChangeHis">
        insert into t_opportunity_stage_change_his
        <trim prefix="(" suffix=")" suffixOverrides=",">
