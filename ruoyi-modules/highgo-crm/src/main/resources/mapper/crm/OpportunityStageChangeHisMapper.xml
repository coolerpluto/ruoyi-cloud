            <if test="changeTime != null">#{changeTime},</if>
            <if test="operatorId != null">#{operatorId},</if>
            <if test="operatorName != null">#{operatorName},</if>
         </trim>
    </insert>

    <update id="updateOpportunityStageChangeHis" parameterType="OpportunityStageChangeHis">
        update t_opportunity_stage_change_his
        <trim prefix="SET" suffixOverrides=",">
            <if test="opportunityCode != null">opportunity_code = #{opportunityCode},</if>
            <if test="sourceStage != null">source_stage = #{sourceStage},</if>
            <if test="targetStage != null">target_stage = #{targetStage},</if>
            <if test="changeTime != null">change_time = #{changeTime},</if>
