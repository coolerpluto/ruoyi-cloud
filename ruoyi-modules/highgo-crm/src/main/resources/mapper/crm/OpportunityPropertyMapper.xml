<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.highgo.crm.mapper.OpportunityPropertyMapper">
    
    <resultMap type="OpportunityProperty" id="OpportunityPropertyResult">
        <result property="id"    column="id"    />
        <result property="propertyLabel"    column="property_label"    />
        <result property="propertyKey"    column="property_key"    />
        <result property="propertyVal"    column="property_val"    />
        <result property="opportunityCode"    column="opportunity_code"    />
        <result property="model"    column="model"    />
        <result property="status"    column="status"    />
        <result property="dataType"    column="data_type"    />
    </resultMap>

    <sql id="selectOpportunityPropertyVo">
        select id, property_label, property_key, property_val, opportunity_code, model, status, data_type from t_opportunity_property
    </sql>

    <select id="selectOpportunityPropertyList" parameterType="OpportunityProperty" resultMap="OpportunityPropertyResult">
        <include refid="selectOpportunityPropertyVo"/>
        <where>  
            <if test="propertyKey != null  and propertyKey != ''"> and property_key like concat('%', #{propertyKey}, '%')</if>
            <if test="opportunityCode != null  and opportunityCode != ''"> and opportunity_code like concat('%', #{opportunityCode}, '%')</if>
            <if test="model != null  and model != ''"> and model = #{model}</if>
            <if test="params.propertyKeys != null and params.propertyKeys.size() >0 ">
                and property_key in
                <foreach collection="params.propertyKeys" item="key" index="index" separator="," open="(" close=")">
                    #{key}
                </foreach>
             </if>
            <if test="params.model != null and params.model!=''"> and model = #{params.model} </if>
        </where>
    </select>
    
    <select id="selectOpportunityPropertyById" parameterType="Long" resultMap="OpportunityPropertyResult">
        <include refid="selectOpportunityPropertyVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertOpportunityProperty" parameterType="OpportunityProperty">
        insert into t_opportunity_property
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="propertyKey != null">property_key,</if>
            <if test="propertyVal != null">property_val,</if>
            <if test="opportunityCode != null">opportunity_code,</if>
            <if test="model != null">model,</if>
            <if test="status != null">status,</if>
            <if test="dataType != null">data_type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="propertyKey != null">#{propertyKey},</if>
            <if test="propertyVal != null">#{propertyVal},</if>
            <if test="opportunityCode != null">#{opportunityCode},</if>
            <if test="model != null">#{model},</if>
            <if test="status != null">#{status},</if>
            <if test="dataType != null">#{dataType},</if>
         </trim>
    </insert>

    <update id="updateOpportunityProperty" parameterType="OpportunityProperty">
        update t_opportunity_property
        <trim prefix="SET" suffixOverrides=",">
            <if test="propertyKey != null">property_key = #{propertyKey},</if>
            <if test="propertyVal != null">property_val = #{propertyVal},</if>
            <if test="opportunityCode != null">opportunity_code = #{opportunityCode},</if>
            <if test="model != null">model = #{model},</if>
            <if test="status != null">status = #{status},</if>
            <if test="dataType != null">data_type = #{dataType},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOpportunityPropertyById" parameterType="Long">
        delete from t_opportunity_property where id = #{id}
    </delete>

    <delete id="deleteOpportunityPropertyByIds" parameterType="String">
        delete from t_opportunity_property where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="getPropertyListByOppCode" parameterType="String" resultMap="OpportunityPropertyResult">

    </select>
</mapper>