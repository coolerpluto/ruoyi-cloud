<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.highgo.crm.mapper.OpportunitySoftwareOperationMapper">
    
    <resultMap type="OpportunitySoftwareOperation" id="OpportunitySoftwareOperationResult">
        <result property="id"    column="id"    />
        <result property="opportunityCode"    column="opportunity_code"    />
        <result property="applicationId"    column="application_id"    />
        <result property="applicationName"    column="application_name"    />
        <result property="isvNeedAdapted"    column="isv_need_adapted"    />
        <result property="targetAdaptedProgress"    column="target_adapted_progress"    />
        <result property="currentAdaptedProgress"    column="current_adapted_progress"    />
        <result property="operationalId"    column="operational_id"    />
        <result property="operationalName"    column="operational_name"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectOpportunitySoftwareOperationVo">
        select id, opportunity_code, application_id, application_name, isv_need_adapted, target_adapted_progress, current_adapted_progress, operational_id, operational_name, create_by, create_time, update_by, update_time, remark from t_opportunity_software_operation
    </sql>

    <select id="selectOpportunitySoftwareOperationList" parameterType="OpportunitySoftwareOperation" resultMap="OpportunitySoftwareOperationResult">
        <include refid="selectOpportunitySoftwareOperationVo"/>
        <where>  
            <if test="opportunityCode != null  and opportunityCode != ''"> and opportunity_code like concat('%', #{opportunityCode}, '%')</if>
            <if test="applicationName != null  and applicationName != ''"> and application_name like concat('%', #{applicationName}, '%')</if>
            <if test="isvNeedAdapted != null  and isvNeedAdapted != ''"> and isv_need_adapted = #{isvNeedAdapted}</if>
            <if test="targetAdaptedProgress != null  and targetAdaptedProgress != ''"> and target_adapted_progress = #{targetAdaptedProgress}</if>
            <if test="currentAdaptedProgress != null  and currentAdaptedProgress != ''"> and current_adapted_progress = #{currentAdaptedProgress}</if>
            <if test="operationalName != null  and operationalName != ''"> and operational_name like concat('%', #{operationalName}, '%')</if>
        </where>
    </select>
    
    <select id="selectOpportunitySoftwareOperationById" parameterType="Long" resultMap="OpportunitySoftwareOperationResult">
        <include refid="selectOpportunitySoftwareOperationVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertOpportunitySoftwareOperation" parameterType="OpportunitySoftwareOperation">
        insert into t_opportunity_software_operation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="opportunityCode != null">opportunity_code,</if>
            <if test="applicationId != null">application_id,</if>
            <if test="applicationName != null">application_name,</if>
            <if test="isvNeedAdapted != null">isv_need_adapted,</if>
            <if test="targetAdaptedProgress != null">target_adapted_progress,</if>
            <if test="currentAdaptedProgress != null">current_adapted_progress,</if>
            <if test="operationalId != null">operational_id,</if>
            <if test="operationalName != null">operational_name,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="opportunityCode != null">#{opportunityCode},</if>
            <if test="applicationId != null">#{applicationId},</if>
            <if test="applicationName != null">#{applicationName},</if>
            <if test="isvNeedAdapted != null">#{isvNeedAdapted},</if>
            <if test="targetAdaptedProgress != null">#{targetAdaptedProgress},</if>
            <if test="currentAdaptedProgress != null">#{currentAdaptedProgress},</if>
            <if test="operationalId != null">#{operationalId},</if>
            <if test="operationalName != null">#{operationalName},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateOpportunitySoftwareOperation" parameterType="OpportunitySoftwareOperation">
        update t_opportunity_software_operation
        <trim prefix="SET" suffixOverrides=",">
            <if test="opportunityCode != null">opportunity_code = #{opportunityCode},</if>
            <if test="applicationId != null">application_id = #{applicationId},</if>
            <if test="applicationName != null">application_name = #{applicationName},</if>
            <if test="isvNeedAdapted != null">isv_need_adapted = #{isvNeedAdapted},</if>
            <if test="targetAdaptedProgress != null">target_adapted_progress = #{targetAdaptedProgress},</if>
            <if test="currentAdaptedProgress != null">current_adapted_progress = #{currentAdaptedProgress},</if>
            <if test="operationalId != null">operational_id = #{operationalId},</if>
            <if test="operationalName != null">operational_name = #{operationalName},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOpportunitySoftwareOperationById" parameterType="Long">
        delete from t_opportunity_software_operation where id = #{id}
    </delete>

    <delete id="deleteOpportunitySoftwareOperationByIds" parameterType="String">
        delete from t_opportunity_software_operation where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>